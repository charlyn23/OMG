<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/title_and_settings_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:layout_weight="1"
        android:textSize="@dimen/main_title"
        android:fontFamily="sans-serif-light"/>
   <Button
       android:layout_width="@dimen/settings_button_width_height"
       android:layout_height="@dimen/settings_button_width_height"
       android:background="@drawable/settings_icon"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/emergency_buttons"
        android:layout_below="@id/title_and_settings_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/not_safe_button"
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="@dimen/emergency_buttons_height"
                android:text="@string/not_safe"
                android:background="@drawable/blue_square"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/emergency_buttons_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/emergency_buttons_text_size"
                android:fontFamily="sans-serif-thin"/>
            <Button
                android:id="@+id/food_button"
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="@dimen/emergency_buttons_height"
                android:text="@string/food"
                android:background="@drawable/blue_square"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/emergency_buttons_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/emergency_buttons_text_size"
                android:fontFamily="sans-serif-thin"/>
            <Button
                android:id="@+id/hurt_button"
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="@dimen/emergency_buttons_height"
                android:text="@string/hurt"
                android:background="@drawable/blue_square"
                android:textColor="@color/emergency_buttons_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/emergency_buttons_text_size"
                android:fontFamily="sans-serif-thin"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/missing_person_button"
                    android:layout_width="@dimen/emergency_buttons_width"
                    android:layout_height="@dimen/emergency_buttons_height"
                    android:text="@string/missing_person"
                    android:background="@drawable/blue_square"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/emergency_buttons_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/emergency_buttons_text_size"
                    android:fontFamily="sans-serif-thin"/>
                <Button
                    android:id="@+id/shelter_button"
                    android:layout_width="@dimen/emergency_buttons_width"
                    android:layout_height="@dimen/emergency_buttons_height"
                    android:text="@string/shelter"
                    android:background="@drawable/blue_square"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/emergency_buttons_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/emergency_buttons_text_size"
                    android:fontFamily="sans-serif-thin"/>
                <Button
                    android:id="@+id/mental_button"
                    android:layout_width="@dimen/emergency_buttons_width"
                    android:layout_height="@dimen/emergency_buttons_height"
                    android:text="@string/mental"
                    android:background="@drawable/blue_square"
                    android:textColor="@color/emergency_buttons_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/emergency_buttons_text_size"
                    android:fontFamily="sans-serif-thin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/money_button"
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="@dimen/emergency_buttons_height"
                android:text="@string/money"
                android:background="@drawable/blue_square"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/emergency_buttons_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/emergency_buttons_text_size"
                android:fontFamily="sans-serif-thin"/>
            <Space
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/pet_help_button"
                android:layout_width="@dimen/emergency_buttons_width"
                android:layout_height="@dimen/emergency_buttons_height"
                android:text="@string/pet_help"
                android:background="@drawable/blue_square"
                android:textColor="@color/emergency_buttons_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/emergency_buttons_text_size"
                android:fontFamily="sans-serif-thin"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sos_and_911"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_buttons"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sos_button"
            android:layout_width="@dimen/emergency_buttons_width"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="SOS"
            android:onClick="textAllYourFamilyMember"
            android:background="@drawable/red_square"
            android:textColor="@color/emergency_buttons_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/emergency_buttons_text_size"
            android:fontFamily="sans-serif-thin"/>
        <Space
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/button_911"
            android:layout_width="@dimen/emergency_buttons_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_square"
            android:text="911"
            android:onClick="call911"
            android:textColor="@color/emergency_buttons_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/emergency_buttons_text_size"
            android:fontFamily="sans-serif-thin"/>
    </LinearLayout>

    <ImageButton
        android:src="@android:drawable/ic_menu_preferences"
        android:layout_alignParentRight="true"
        android:onClick="settingsOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
