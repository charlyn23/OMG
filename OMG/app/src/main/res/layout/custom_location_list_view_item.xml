<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/location_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="LOCATION NAME"
        android:textSize="@dimen/list_item_title_size"
        android:typeface="serif"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/location_address_field"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Address goes here"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/location_phone_number"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_address_field"
            android:text="(000)000-0000"
            android:textSize="16sp"
            android:textColor="#ff194cff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_hours_tag"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_phone_number"
            android:text="Hours"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/location_hours"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_hours_tag"
            android:text="hours here"
            android:textSize="16sp"/>

    </RelativeLayout>


</LinearLayout>